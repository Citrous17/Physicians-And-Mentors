<div class="flex flex-col items-center justify-center">
  <h1 class="text-4xl md:text-6xl text-white font-bold mt-[32px] p-4">Log In</h1>
</div>


<!-- Centered content -->
<div class="relative flex items-center justify-center h-full flex-col bg-[var(--surface-color)] rounded-md w-60/100 m-auto p-8">
  <%= form_with url: login_path, method: :post do |f| %>
      <div class="text-white pt-8">
        <%= f.label :email %>
        <%= f.text_field :email, class: "border p-2 w-full my-2" %>
      </div>
    
      <div class="text-white">
        <%= f.label :password %>
        <%= f.password_field :password, class: "border p-2 w-full my-2" %>
      </div>
    
      <div class="flex justify-center">
        <%= f.submit "Submit", class: "accent-button p-4 rounded-md bg-[var(--ok-highlight-faded-color)]" %>
      </div>

      <div class="flex justify-center">
          <p class="text-sm text-white font-bold mt-4">
              or
          </p>
      </div>
  <% end %>
  <div class="flex justify-center text-white">
  <%= button_to "Log in with Google", '/auth/google_oauth2', method: :post, data: { turbo: "false" }, class: "blue-button p-4 m-4 rounded-md bg-[var(--ok-highlight-faded-color)]" %>
  </div>

  <div class="flex justify-center text-white mt-4">
    <p>Don't have an account?</p>
    <%= link_to "Sign Up", signup_path, class: "text-blue-400 underline ml-2" %>
  </div>

</div>

