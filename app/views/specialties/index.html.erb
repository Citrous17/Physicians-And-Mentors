<%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
<%= stylesheet_link_tag 'users', media: 'all', data: { turbo: false } %>

<div class="text-white">
  <h1 class="text-2xl font-bold text-center my-6">All Specialties</h1>

  <div class="flex flex-row justify-between m-4 w-80/100 mx-auto">
    <%= link_to 'New Specialty', new_specialty_path, class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition" %>
  </div>

  <div class="flex flex-col items-center justify-center">
    <div class="w-80/100 bg-[var(--surface-color)] rounded-md">
      <table id="users-table" class="w-full">
        <thead>
          <tr>
            <th class="w-5/100"></th>
            <th class="sortable-header w-20/100">Name</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @specialties.each do |specialty| %>
            <tr class="users-table-rows">
              <td><%= specialty.name %></td>
              <td><%= link_to 'Show', specialty, class: "blue-button p-2 rounded-md bg-blue-500 hover:bg-blue-600 transition text-white" %></td>
              <td><%= link_to 'Edit', edit_specialty_path(specialty), class: "blue-button p-2 rounded-md bg-yellow-500 hover:bg-yellow-600 transition text-white" %></td>
              <td>
                <%= link_to "Delete", specialty, data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete #{specialty.name}?"} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
