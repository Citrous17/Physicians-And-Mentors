<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<% content_for :title, "Specialty" %>

<div class="flex justify-center items-center min-h-screen profile-container">
  <div class="profile-card shadow-lg rounded-xl p-6 w-full md:w-2/3 lg:w-1/2 border border-gray-300 relative">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-100 text-green-700 font-medium rounded-md mb-4 text-center" id="notice"><%= notice %></p>
    <% end %>
    
    <div class="grid gap-6 items-center">
      
      <!-- User Info -->
      <div class="profile-card-header">
        <div class="text-left md:text-left">
          <h1> <%= @specialty.name %></h1>
        </div>
      </div>
    </div>
    
    <div class="flex justify-center space-x-6 mt-6">
      <%= link_to "Edit Specialty", edit_specialty_path(@specialty), class: "px-5 py-2 text-white rounded-lg bg-[var(--ok-highlight-faded-color)] font-medium blue-button" %>
      <%= link_to "Back", specialties_path, class: "px-5 py-2 bg-gray-300 text-black rounded-lg font-medium blue-button" %>
    </div>
  </div>
</div>