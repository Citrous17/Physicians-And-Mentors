<h1>Users show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Phone number</th>
      <th>Profile image url</th>
      <%# <th>Is professional</th> %>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.profile_image_url %></td>
        <%# <td><%= user.is_professional %></td> %>
        
        <%# <td><%= link_to 'Show', user %></td> %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', confirm_destroy_user_path(user) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

