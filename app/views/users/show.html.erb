<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'users', media: 'all', data: { turbolinks: false } %>

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=call" />

<% content_for :title, "User Profile" %>

<div class="flex justify-center items-center min-h-screen profile-container">
  <div class="profile-card shadow-lg rounded-xl p-6 w-full md:w-2/3 lg:w-1/2 border border-gray-300 relative">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-100 text-green-700 font-medium rounded-md mb-4 text-center" id="notice"><%= notice %></p>
    <% end %>
    
    <div class="grid grid-cols-2 gap-6 items-center">
      <!-- Profile Image -->
      <div class="flex justify-end mt-6">
        <div class="w-32 h-32">
          <img src="<%= asset_path('profile-placeholder.png') %>" alt="Profile Picture" class="rounded-full w-full h-full object-cover shadow-md border border-gray-200">
        </div>
      </div>
      
      <!-- User Info -->
      <div class="profile-card-header">
        <div class="text-left md:text-left">
          <h1 class="font-semibold text-3xl text-white"><%= @user.first_name %> <%= @user.last_name %></h1>
          <p class="text-gray-200 text-md mt-1">
            <%= mail_to @user.email %>
          </p>
          <p class="text-gray-200 font-medium mt-2"><span class="material-symbols-outlined">call</span> <%= @user.phone_number %></p>
        </div>
      </div>
    </div>
    
    <div class="profile-card-header flex justify-center mt-6 text-gray-300 border-t pt-4 space-x-2">
      <p class="mb-1 profile-td"><strong class="text-gray-200">DOB:</strong> <%= @user.DOB %></p>
      <p class="mb-1 profile-td"><strong class="text-gray-200">Professional:</strong> <%= @user.isProfessional ? 'Yes' : 'No' %></p>
    </div>
    
    <div class="flex justify-center space-x-6 mt-6">
      <%= link_to "Edit Profile", edit_user_path(@user), class: "px-5 py-2 text-white rounded-lg bg-[var(--ok-highlight-faded-color)] font-medium blue-button" %>
      <%= link_to "Back", users_path, class: "px-5 py-2 bg-gray-300 text-black rounded-lg font-medium blue-button" %>
    </div>
  </div>
</div>
