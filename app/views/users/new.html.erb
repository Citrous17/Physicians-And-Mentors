<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'users', media: 'all', data: { turbolinks: false } %>

<div class="flex flex-col items-center justify-center">
  <h1 class="text-2xl m-auto font-bold p-4">Creating a New User</h1>
</div>

<%= render 'form', user: @user, readonly_fields: false, is_new_auth: false %>

<div class="flex flex-col items-center justify-center p-4">
  <%= link_to 'Cancel', users_path, class: "blue-button p-4 mb-4 rounded-md bg-[var(--surface-color)]" %>
</div>