<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<p id="notice"><%= notice %></p>

<form action="/users" method="GET">
  <input type="text" name="search_name" >
  <input type="submit" value="Search for Users by First Name">
</form>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Phone number</th>
      <th>Profile image url</th>
      <th>Is professional</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% if @users.nil? %>
    <tr>
      <td colspan="2">No users found.</td>
    </tr>
    <% else %>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.DOB %></td>
          <td><%= user.phone_number %></td>
          <td><%= user.profile_image_url %></td>
          <td><%= user.isProfessional %></td>
          
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', confirm_destroy_user_path(user) %></td>

        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>