<h1>New Post</h1>

<%= form_with(model: @post, local: true) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :content %>
    <%= f.text_area :content, required: true %>
  </div>

  <div>
    <%= f.submit "Create Post" %>
  </div>
<% end %>


<%= link_to "Back to Posts", posts_path %>
