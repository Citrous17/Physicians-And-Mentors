<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'users', media: 'all', data: { turbolinks: false } %>

<div class="text-white">
  <h1>Professionals</h1>
  <p>Find me in app/views/professionals/index.html.erb</p>

  <% if notice.present? %>
    <div class="flex flex-col items-center justify-center rounded-lg p-10 m-10 w-80/100 mx-auto bg-[var(--accent-color)]">
      <h1 id="notice"><%= notice %></p>
    </div>
  <% end %>

  <table class="table-auto w-full bg-white text-black">
    <thead class="bg-gray-200 text-black">
      <tr>
        <th class="px-4 py-2">First Name</th>
        <th class="px-4 py-2">Last Name</th>
        <th class="px-4 py-2">Email</th>
        <th class="px-4 py-2">Phone Number</th>
        <th class="px-4 py-2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @professionals.each do |professional| %>
        <tr class="bg-white text-black">
          <td class="border px-4 py-2"><%= professional.first_name %></td>
          <td class="border px-4 py-2"><%= professional.last_name %></td>
          <td class="border px-4 py-2"><%= professional.email %></td>
          <td class="border px-4 py-2"><%= professional.phone_number %></td>
          <td class="border px-4 py-2">
            <%= link_to 'Show', professional_path(professional), class: "text-blue-500 hover:text-blue-700" %>
            <%= link_to 'Edit', edit_professional_path(professional), class: "text-yellow-500 hover:text-yellow-700" %>
            <%= link_to 'Destroy', confirm_destroy_professional_path(professional), class: "red-button p-2 rounded-md" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Professional', new_professional_path, class: "text-green-500 hover:text-green-700" %>
</div>